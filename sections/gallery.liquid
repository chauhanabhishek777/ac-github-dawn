<style>
     .gallery {
      background: url(https://cdn.shopify.com/s/files/1/0268/6435/3393/files/Yellow_Vector.svg?v=1754590149);
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
  }
  .zigzag-scroll-container {
    overflow-x: scroll;
    padding: 2rem 0 0;
  }
  .zigzag-scroll-wrapper {
    display: flex;
    gap: 6rem;
    padding-left: 40px;
    padding-bottom: 200px;
  }
  .zigzag-card {
    position: relative;
    width: 100%;
    flex: 0 0 20%;
  }
  .zigzag-card:nth-child(even) {
    transform: translateY(128px);
  }
  .zigzag-card img,
  .zigzag-card video {
    width: 100%;
  }
  .card-text p {
      font-size: 18px;
      color: #000;
  }
  .zigzag-scroll-container::-webkit-scrollbar {
    display: none;
  }

  .zigzag-scroll-container {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
.social_links {
  display: flex;
  flex-direction: column;
  width: fit-content;
  background: #F9A5F9;
  padding: 14px;
  gap: 5px;
  transform: rotate(1.635deg);
  margin-left: 40px;
}
  a.social_link {
      font-size: 35px;
    line-height: 1;
      color: #fff;
      text-decoration: none;
      display: flex;
      align-items: center;
      gap: 10px;
  }
 a.social_link span span{
  font-family: "Have Heart Two";
  }
  a.social_link  svg{
  width: 33px;
    height: 33px;
  }
  .g-info h2{
    font-size: 100px;
    font-family: var(--font-heading-family);
    font-weight: 400;
    color: #fff;
  }
  @media(max-width: 1440px){
  .zigzag-card {
    flex: 0 0 25%;
  }
  }
  @media(max-width: 1250px){
  .zigzag-scroll-wrapper {
    gap: 4rem;
  }
  }
  @media(max-width: 1000px){
  .zigzag-scroll-wrapper {
    gap: 3rem;
  }
  }
  @media(max-width: 989px){
  .zigzag-scroll-wrapper {
    padding-left: 30px;
    gap: 3rem;
  }
    .zigzag-card {
        flex: 0 0 28%;
    }
  }
  @media(max-width: 749px){
  .zigzag-scroll-wrapper {
    padding-left: 30px;
    gap: 3rem;
  }
    .zigzag-card {
        flex: 0 0 28%;
    }
  }
</style>
<div class="gallery">
  <div class="gallery-info">
    <div class="g-info">
      {{ section.settings.g_info }}
    </div>
    <div class="g-video">
      <img src="https://cdn.shopify.com/s/files/1/0268/6435/3393/files/Mei_Mei_Smiley.png?v=1754736862">
    </div>
  </div>
  <div class="zigzag-scroll-container">
    <div class="zigzag-scroll-wrapper">
      {% for block in section.blocks %}
        <div class="zigzag-card">
          <div class="scroll-trigger animate--slide-in" data-cascade style="--animation-order: {{ forloop.index }};">
            {% if block.settings.video_url %}
              <video src="{{ block.settings.video_url }}" autoplay muted loop playsinline></video>
            {% elsif block.settings.image %}
              <img src="{{ block.settings.image | img_url: '800x' }}" alt="{{ block.settings.title }}">
            {% endif %}
            <div class="card-text">
              <p>{{ block.settings.description }}</p>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
