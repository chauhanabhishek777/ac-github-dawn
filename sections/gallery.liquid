{% schema %}
{
  "name": "Zigzag Scroll Section",
  "settings": [
    {
      "type": "richtext",
      "id": "g_info",
      "label": "Description",
    }
  ],
  "blocks": [
    {
      "type": "media_card",
      "name": "Media Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "video_url",
          "label": "Optional Video URL (MP4 only)"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "@ From side hustle to sauce business here we go."
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Zigzag Scroll Cards",
      "category": "Custom"
    }
  ]
}
{% endschema %}
